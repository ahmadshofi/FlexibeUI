<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/edt_input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textSize="40sp"
        android:textColor="@color/numberButton"/>

    <TextView
        android:id="@+id/edt_hasil"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberButton"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHapus"
                style="@style/ActionButtonStyle"
                android:text="C"/>
            <TextView
                android:id="@+id/tvBukaKurung"
                style="@style/ActionButtonStyle"
                android:text="("/>
            <TextView
                android:id="@+id/tvTutupKurung"
                style="@style/ActionButtonStyle"
                android:text=")"/>
            <TextView
                android:id="@+id/tvBagi"
                style="@style/ActionButtonStyle"
                android:text="/"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTujuh"
                style="@style/NumberButtonStyle"
                android:text="7"/>
            <TextView
                android:id="@+id/tvDelapan"
                style="@style/NumberButtonStyle"
                android:text="8"/>
            <TextView
                android:id="@+id/tvSembilan"
                style="@style/NumberButtonStyle"
                android:text="9"/>
            <TextView
                android:id="@+id/tvkali"
                style="@style/ActionButtonStyle"
                android:text="*"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEmpat"
                style="@style/NumberButtonStyle"
                android:text="4"/>
            <TextView
                android:id="@+id/tvLima"
                style="@style/NumberButtonStyle"
                android:text="5"/>
            <TextView
                android:id="@+id/tvEnam"
                style="@style/NumberButtonStyle"
                android:text="6"/>
            <TextView
                android:id="@+id/tvKurang"
                style="@style/ActionButtonStyle"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSatu"
                style="@style/NumberButtonStyle"
                android:text="1"/>
            <TextView
                android:id="@+id/tvDua"
                style="@style/NumberButtonStyle"
                android:text="2"/>
            <TextView
                android:id="@+id/tvTiga"
                style="@style/NumberButtonStyle"
                android:text="3"/>
            <TextView
                android:id="@+id/tvTambah"
                style="@style/ActionButtonStyle"
                android:text="+"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvKoma"
                style="@style/NumberButtonStyle"
                android:text="."/>
            <TextView
                android:id="@+id/tvNol"
                style="@style/NumberButtonStyle"
                android:text="0"/>
            <ImageView
                android:id="@+id/tvKembali"
                style="@style/NumberButtonStyle"
                android:scaleType="center"
                android:src="@drawable/ic_launcher_background"/>
            <TextView
                android:id="@+id/tvSamaDengan"
                style="@style/ActionButtonStyle"
                android:text="="/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>